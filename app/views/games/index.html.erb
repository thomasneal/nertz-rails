<h1>Games</h1>
<table class="table table-striped">
  <tr>
    <th>Game</th>
    <th>Users</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
<% @games.each do |game| %>
  <tr>
    <td><%= game.id %></td>
    <td><%= game.users.pluck(:name).join(", ") %></td>
    <td><%= game.status %></td>
    <td>
      <div class="btn-group">
      <%= link_to "View", game_path(game.id), class: "btn btn-outline-primary" %>
      <%= link_to "X", game_path(game.id),
        method: :delete,
        data: { confirm: 'Are you sure you want to delete this game?' },
        class: "btn btn-outline-danger"
      %>
      </div>
    </td>
  </tr>
<% end %>
</table>
<%= link_to "Add New Game", new_game_path, class: "btn btn-primary" %>
